<?xml version="1.0" encoding="utf-8" ?>
<MolaPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MolaApp.Page.RegistrationPage">
    <MolaPage.Content>
        <StackLayout>
            <Label Text="Account erstellen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label x:Name="scanLabel" Text="Damit wir den Code auf deinem Aufnäher deinem Profil zuordnen können, musst du ihn bitte einmal scannen"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="codeErrorLabel" Text="" />
            <Button x:Name="scanButton" Text="Jetzt meinen Aufnäher scannen" Clicked="ScanAsync" BackgroundColor="AliceBlue" />

            <Entry x:Name="emailEntry" Placeholder="Email-Adresse" />
            <Label x:Name="emailErrorLabel" Text="" />

            <Entry x:Name="passwordEntry" Placeholder="Passwort" IsPassword="True"/>
            <Entry x:Name="passwordConfirmEntry" Placeholder="Passwort bestätigen" IsPassword="True"/>
            <Label x:Name="passwordErrorLabel" Text="" />
            
            <Button x:Name="createButton" Text="Account erstellen" IsEnabled="False" Clicked="CreateAsync" BackgroundColor="LawnGreen" />
        </StackLayout>
    </MolaPage.Content>
</MolaPage>